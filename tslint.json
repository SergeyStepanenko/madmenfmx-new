{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "plugins": ["babel", "react", "promise", "import", "standard", "node"],
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "max-len": [
      1,
      {
        "code": 80,
        "comments": 80
      }
    ],
    "react/sort-comp": [
      1,
      {
        "order": [
          "static-methods",
          "lifecycle",
          "everything-else",
          "rendering",
          "refs&handlers"
        ],
        "groups": {
          "rendering": ["/^render.+$/", "render"],
          "refs&handlers": ["/^ref.+$/", "/^handle.+$/"]
        }
      }
    ],
    "newline-before-return": "error",
    "newline-after-var": ["error", "always"],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "ordered-imports": [false],
    "object-literal-sort-keys": false,
    "member-access": false,
    "no-console": [true, "warning"],
    "no-shadowed-variable": [false]
  }
}
